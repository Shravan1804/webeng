<h1>Groups Index</h1>

<% if @groups.exists? %>
    <ul class="list-group">
    <% @groups.each do |group| %>
        <li class="list-group-item"><h4><%= group.name %></h4></li>
        <li class="list-group-item"><%= group.hometown %></li>
        <li class="list-group-item"><%= group.owner.email %></li>
    <% end %>
    </ul>
<% else %>
    <h2>No groups were found</h2>
<% end %>