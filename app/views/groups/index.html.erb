<h1>All Meetups</h1>

<% if @groups.exists? %>
    <ul class="list-group">
    <% @groups.each do |group| %>
        <li class="list-group-item"><h4><%= group.name %></h4></li>
        <li class="list-group-item"><%= group.hometown %></li>
        <li class="list-group-item"><%= group.owner.email %></li>
		<li class="list-group-item"><%= link_to 'More informations', group_path(group) %></li>
		<br/>
    <% end %>
    </ul>
<% else %>
    <h2>No groups were found</h2>
<% end %>
	<%= link_to 'Create a new group', new_group_path %>